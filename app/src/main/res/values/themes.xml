<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with Material 3 -->
    <style name="Theme.Project" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Enable Material 3 -->
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <!-- Custom Bottom Navigation Style -->
    <style name="CustomBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>

        <item name="itemActiveIndicatorStyle">@style/App.ActiveIndicatorStyle</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Active Indicator Style for Bottom Navigation -->
    <style name="App.ActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/black</item>
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
    </style>

</resources>
